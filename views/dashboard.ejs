        border-radius: 5px;
        font-size: 16px;
      }

      .styled-button {
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #3498db;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-bottom: 1rem;
      }

      .styled-button:hover {
        background-color: #2980b9;
      }

      .mainn {
        color: #c43949;
        width: 97%;
        /* height: 100vh; */
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: pop;
        padding: 3rem;
