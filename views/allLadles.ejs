                        <div class="ab">

                            <button type="details" class="details">View Details</button>
                        </div>
                    </div>
                     -->

                </div>
            </div>

            <!-- <br> -->

    </section>

    <script type="module">
        try {
            const response = await fetch("/ladles");
            const result = await response.json();
            if (result.success && result.data.length > 0) {
                result.data.forEach((l, i) => {
                    const cardsContainer = document.querySelector(".cards");
                    // console.log(cardsContainer);

                    const card = document.createElement("div");
                    card.classList.add("card", "card-3");

                    const cardData = document.createElement("div");
                    cardData.classList.add("card--data");

                    const cardContent = document.createElement("div");
                    cardContent.classList.add("card--content");

                    const cardTitle = document.createElement("h5");
                    cardTitle.classList.add("card--title");
                    cardTitle.textContent = "Ladle no.";

                    const ladleNumber = document.createElement("h1");
                    ladleNumber.textContent = result.data[i].LadleNo;

                    const cardIcon = document.createElement("i");
                    cardIcon.classList.add("ri-battery-2-line", "card--icon--lg");

                    const detailsButton = document.createElement("a");
                    detailsButton.type = "button";
                    detailsButton.href = "/ladles/r/"+result.data[i].LadleNo;
                    detailsButton.classList.add("details");
                    detailsButton.textContent = "View Details";

                    cardContent.appendChild(cardTitle);
                    cardContent.appendChild(ladleNumber);

                    cardData.appendChild(cardContent);
                    cardData.appendChild(cardIcon);

                    card.appendChild(cardData);
                    card.appendChild(detailsButton)

                    cardsContainer.appendChild(card);
                });
            }
        } catch (error) {
            console.error(error)
        }
    </script>
</body>

</html>